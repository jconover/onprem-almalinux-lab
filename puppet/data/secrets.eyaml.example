---
# Hiera-eyaml Secrets Example File
# ===================================
#
# This file demonstrates the structure for encrypted secrets using hiera-eyaml.
# Copy this file to secrets.eyaml and replace placeholder values with actual
# encrypted secrets using: eyaml encrypt -s 'your_secret_value'
#
# The ENC[PKCS7,...] values below are placeholders. Real encrypted values
# will be much longer and contain the actual encrypted data.

# ------------------------------------------------------------------------------
# Database Credentials
# ------------------------------------------------------------------------------
# Primary database password for application connections
# Used by: profile::database, profile::webapp
database::root_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# Application database user password
database::app_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# Replication user password for database clustering
database::replication_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# ------------------------------------------------------------------------------
# LDAP/Directory Service Credentials
# ------------------------------------------------------------------------------
# LDAP administrator bind password
# Used by: profile::ldap_client, profile::sssd
ldap::admin_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# LDAP service account password for application binds
ldap::bind_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# ------------------------------------------------------------------------------
# API Keys and Tokens
# ------------------------------------------------------------------------------
# External monitoring service API key
# Used by: profile::monitoring
api_keys::monitoring_service: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# Cloud provider API credentials
api_keys::cloud_provider: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# Backup service authentication token
api_keys::backup_service: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# ------------------------------------------------------------------------------
# SSL/TLS Private Keys and Certificates
# ------------------------------------------------------------------------------
# Wildcard certificate private key (multiline block format)
# Used by: profile::nginx, profile::haproxy
ssl::wildcard_private_key: >
  ENC[PKCS7,placeholder_encrypted_value_for_multiline_content
  this_would_contain_the_full_encrypted_private_key
  split_across_multiple_lines_for_readability]

# ------------------------------------------------------------------------------
# Application Secrets
# ------------------------------------------------------------------------------
# Rails/Django secret key base for session encryption
app::secret_key_base: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# JWT signing secret for API authentication
app::jwt_secret: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# Encryption key for application-level data encryption
app::encryption_key: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# ------------------------------------------------------------------------------
# Service Account Passwords
# ------------------------------------------------------------------------------
# Local service accounts used by various daemons
service_accounts::prometheus_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]
service_accounts::grafana_admin_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]
service_accounts::jenkins_admin_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# ------------------------------------------------------------------------------
# Infrastructure Secrets
# ------------------------------------------------------------------------------
# SNMP community strings for network devices
infrastructure::snmp_community: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# IPMI/BMC credentials for out-of-band management
infrastructure::ipmi_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]

# vCenter/ESXi service account password
infrastructure::vcenter_password: ENC[PKCS7,placeholder_encrypted_value_replace_with_actual_encryption]
