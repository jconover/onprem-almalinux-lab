{
  "name": "justin-profile",
  "version": "1.0.0",
  "author": "Justin",
  "summary": "Reusable Puppet profiles for AlmaLinux server configuration including base system, web, database, DNS, NFS, HAProxy, firewall, and monitoring",
  "license": "MIT",
  "source": "https://github.com/username/puppet-profile",
  "dependencies": [
    {"name": "puppetlabs/stdlib", "version_requirement": ">= 9.0.0 < 10.0.0"}
  ],
  "operatingsystem_support": [
    {
      "operatingsystem": "RedHat",
      "operatingsystemrelease": ["8", "9"]
    },
    {
      "operatingsystem": "AlmaLinux",
      "operatingsystemrelease": ["8", "9", "10"]
    }
  ],
  "requirements": [
    {"name": "puppet", "version_requirement": ">= 7.0.0 < 9.0.0"}
  ],
  "tags": [
    "profile",
    "almalinux",
    "rhel",
    "apache",
    "httpd",
    "mariadb",
    "mysql",
    "bind",
    "dns",
    "nfs",
    "haproxy",
    "loadbalancer",
    "firewalld",
    "selinux",
    "chrony",
    "ntp",
    "prometheus",
    "node_exporter",
    "monitoring",
    "hardening"
  ]
}
