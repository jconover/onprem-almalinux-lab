# Managed by Ansible -- do not edit
global
    log         /dev/log local0
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option                  http-server-close
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

{% if haproxy_stats_enabled %}
frontend stats
    bind *:{{ haproxy_stats_port }}
    stats enable
    stats uri /stats
    stats refresh 10s
{% endif %}

frontend http_front
    bind *:{{ haproxy_frontend_port }}
    default_backend http_back

backend http_back
    balance {{ haproxy_balance_algorithm }}
    option httpchk GET /
{% for host in haproxy_backend_servers %}
    server {{ host }} {{ hostvars[host].ansible_host | default(host) }}:{{ haproxy_backend_port }} check
{% endfor %}
